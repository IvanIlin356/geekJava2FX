<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox
        fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea fx:id="conversationArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="messageText" onAction="#sendMessage" HBox.hgrow="ALWAYS" promptText="Введите сообщение"/>
        <Button fx:id="messageSend" onAction="#sendMessage" text="Отправить"/>
    </HBox>
</VBox>